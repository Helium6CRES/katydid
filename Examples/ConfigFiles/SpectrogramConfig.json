{
    "processor-toolbox":
    {
        "processors":
        [
	        { "type": "egg-processor",           "name": "egg" },
	        { "type": "forward-fft",             "name": "fft" },
            { "type": "convert-to-power",        "name": "to-ps" },
	        { "type": "root-spectrogram-writer", "name": "writer" }
        ],
        
        "connections":
        [
	        {
	            "signal": "egg:header",
	            "slot": "fft:header"
	        },
	        
	        {
	            "signal": "egg:ts",
	            "slot": "fft:ts-fftw"
	        },
	        {
	            "signal": "fft:fft",
	            "slot": "writer:fs-fftw"
	        }
        ],
        
        "run-queue":
        [
            "egg"
        ]
    },
    

    "egg":
    {
        "filename": "/path/to/file.egg",
        "egg-reader": "egg3",
        "slice-size": 16384,
        "number-of-slices": 500
    },
    
    "fft":
    {
        "transform-flag": "ESTIMATE"
    },
    
    "writer":
    {
        "output-file": "/path/to/file.root",
        "file-flag": "recreate",
        "min-time": 0.0,
        "max-time": 0.01,
        "min-freq": 0.0,
        "max-freq": 20.0e6
    }
}