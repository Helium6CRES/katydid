{
    "processor-toolbox":
    {
        "processors":
        [
	        { "type": "egg-processor",       "name": "egg" },
	        { "type": "simple-fft",          "name": "fft" },
            { "type": "convert-to-power",    "name": "to-ps" },
	        { "type": "basic-root-writer",   "name": "writer" }
        ],
        
        "connections":
        [
	        {
	            "signal": "egg:header",
	            "slot": "fft:header"
	        },
	        
	        {
	            "signal": "egg:ts",
	            "slot": "fft:ts"
	        },
	        {
	            "signal": "fft:fft-forward",
                "slot": "to-ps:fs-polar-to-psd"
            },
            {
                "signal": "to-ps:psd",
	            "slot": "writer:ps"
	        }
        ],
        
        "run-queue":
        [
            "egg"
        ]
    },
    

    "egg":
    {
        "filename": "/path/to/file.egg",
        "egg-reader": "egg3",
        "slice-size": 16384,
        "egg-reader": "monarch",
        "number-of-slices": 1
    },
    
    "fft":
    {
        "transform-flag": "ESTIMATE"
    },
    
    "writer":
    {
        "output-file": "/path/to/file.root",
        "file-flag": "recreate"
    }
}