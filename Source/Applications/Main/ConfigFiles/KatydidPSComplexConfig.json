{
    "katydid":
    {
        "processor-toolbox":
        {
            "processor":
            {
                "type": "egg-processor",
                "name": "egg"
            },
            "processor":
            {
                "type": "complex-fftw",
                "name": "fft"
            },
            "processor":
            {
                "type": "basic-root-writer",
                "name": "writer"
            },
            
            "connection":
            {
                "signal-processor": "egg",
                "signal-name": "slice",
                "slot-processor": "fft",
                "slot-name": "ts"
            },
            "connection":
            {
                "signal-processor": "egg",
                "signal-name": "header",
                "slot-processor": "fft",
                "slot-name": "header"
            },
            "connection":
            {
                "signal-processor": "fft",
                "signal-name": "fft",
                "slot-processor": "writer",
                "slot-name": "fs-fftw"
            },
            
            "run-queue":
            {
                "processor": "egg"
            }
        },
        

        "egg":
        {
            "filename": "/path/to/file.egg",
            "slice-size": 16384,
            "number-of-slices": 1
        },
        
        "fft":
        {
            "transform-flag": "ESTIMATE"
        },
        
        "writer":
        {
            "output-file": "/path/to/file.root",
            "file-flag": "recreate"
        }
    }
}