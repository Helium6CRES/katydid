{
    "katydid":
    {
        "processor-toolbox":
        {
            "processor":
            {
                "type": "multifile-json-reader",
                "name": "mctruth"
            },
            "processor":
            {
                "type": "multifile-json-reader",
                "name": "candidates"
            },
            "processor":
            {
                "type": "compare-candidates",
                "name": "cc"
            },
            "processor":
            {
                "type": "root-tree-writer",
                "name": "rtw"
            },
            
            "connection":
            {
                "signal-processor": "mctruth",
                "signal-name": "mc-truth-events",
                "slot-processor": "candidates",
                "slot-name": "analysis-candidates"
            },
            "connection":
            {
                "signal-processor": "candidates",
                "signal-name": "analysis-candidates",
                "slot-processor": "cc",
                "slot-name": "truth-vs-analysis"
            },
            "connection":
            {
                "signal-processor": "cc",
                "signal-name": "cc-results",
                "slot-processor": "rtw",
                "slot-name": "meta-cc-locust-mc"
            },
            
            "connection":
            {
                "signal-processor": "mctruth",
                "signal-name": "done",
                "slot-processor": "rtw",
                "slot-name": "close-file"
            },
            

            "run-queue":
            {
                "processor": "mctruth"
            }
        },
        

        "mctruth":
        {
            "input-file": "/path/to/run0.mcinfo",
            "input-file": "/path/to/run1.mcinfo",
            "input-file": "/path/to/run2.mcinfo",
            "input-file": "/path/to/run3.mcinfo",
            "input-file": "/path/to/run4.mcinfo",
            "data-type": "mc-truth-events"
        },
        
        "candidates":
        {
            "input-file": "/path/to/run0.candidates",
            "input-file": "/path/to/run1.candidates",
            "input-file": "/path/to/run2.candidates",
            "input-file": "/path/to/run3.candidates",
            "input-file": "/path/to/run4.candidates",
            "data-type": "analysis-candidates"
        },
        
        "cc":
        {
            "assume-sparse-candidates": false
        },
        
        "rtw":
        {
            "output-file": "output.root",
            "fileflag": "recreate"
        }
    }
}