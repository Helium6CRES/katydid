{
    "katydid":
    {
        "processor-toolbox":
        {
            "processor":
            {
                "type": "oneshot-json-reader",
                "name": "mctruth"
            },
            "processor":
            {
                "type": "oneshot-json-reader",
                "name": "candidates"
            },
            "processor":
            {
                "type": "compare-candidates",
                "name": "cc"
            },
            "processor":
            {
                "type": "json-writer",
                "name": "jw"
            },
            
            "connection":
            {
                "signal-processor": "mctruth",
                "signal-name": "mc-truth-events",
                "slot-processor": "candidates",
                "slot-name": "append-analysis-candidates"
            },
            "connection":
            {
                "signal-processor": "candidates",
                "signal-name": "analysis-candidates",
                "slot-processor": "cc",
                "slot-name": "truth-vs-analysis"
            },
            "connection":
            {
                "signal-processor": "cc",
                "signal-name": "cc-results",
                "slot-processor": "jw",
                "slot-name": "cc-results"
            },

            "run-queue":
            {
                "processor": "mctruth"
            }
        },
        

        "mctruth":
        {
            "input-file": "/path/to/mc_run.mcinfo",
            "run-type": "mc-truth-events"
        },
        
        "candidates":
        {
            "input-file": "/path/to/mc_run.candidates"
         },
        
        "cc":
        {
            "assume-sparse-candidates": false
        },
        
        "jw":
        {
            "output-file": "/path/to/compcand_results.json",
            "pretty-json": true
        }
    }
}