{
    "app":
    {
        "root-app": true
    },
    
    "processor-toolbox":
    {
        "processors":
        [
	        { "type": "egg-processor",       "name": "egg" },
	        { "type": "simple-fft",          "name": "fft" },
	        { "type": "data-display",        "name": "disp" }
        ],
        
        "connections":
        [
	        {
	            "signal": "egg:header",
	            "slot": "fft:header"
	        },
	        
	        {
	            "signal": "egg:ts",
	            "slot": "fft:ts"
	        },
	        {
	            "signal": "fft:fft-forward",
	            "slot": "disp:fs-polar"
	        }
        ],
        
        "run-queue":
        [
            "egg"
        ]
    },
    

    "egg":
    {
        "filename": "/path/to/file.egg",
        "slice-size": 16384,
        "number-of-slices": 10
    },
    
    "fft":
    {
        "transform-flag": "ESTIMATE"
    },
    
    "disp":
    {
    }
}